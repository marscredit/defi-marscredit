{
  "name": "defi-marscredit",
  "version": "1.0.0",
  "description": "Mars Credit Network DeFi Application - A decentralized finance platform for the Mars Credit Network blockchain enabling MARS token redemption through grant systems.",
  "private": true,
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "truffle compile",
    "migrate": "truffle migrate",
    "migrate:marscredit": "truffle migrate --network marscredit",
    "test": "truffle test",
    "test:frontend": "jest",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:contracts": "rm -rf build/contracts",
    "add-grant": "node scripts/add-grant.js",
    "deploy:bridge": "truffle migrate --network marscredit -f 9 --to 9",
    "build:solana": "anchor build",
    "deploy:solana:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:solana:mainnet": "anchor deploy --provider.cluster mainnet",
    "test:solana": "anchor test",
    "bridge:start": "node scripts/start-bridge-relayer.js",
    "bridge:start:production": "node scripts/production-relayer.js",
    "bridge:start:working": "node scripts/working-relayer.js",
    "bridge:monitor": "node scripts/monitor-bridge.js",
    "bridge:check": "node scripts/check-bridge-transaction.js",
    "bridge:complete": "node scripts/manual-bridge-complete.js",
    "bridge:production": "node scripts/production-bridge-manager.js",
    "bridge:queue": "node scripts/queue-processor.js",
    "bridge:monitor:production": "node scripts/production-monitor.js",
    "bridge:monitor:watch": "node scripts/production-monitor.js --watch",
    "bridge:deploy:all": "npm run deploy:bridge && npm run deploy:solana:devnet",
    "token:add-metadata": "node scripts/add-token-metadata.js",
    "token:create-new": "node scripts/create-new-mars-token.js",
    "generate:solana-wallet": "node scripts/generate-solana-wallet.js"
  },
  "keywords": [
    "defi",
    "mars-credit-network",
    "blockchain",
    "mars-tokens",
    "grants",
    "web3",
    "nextjs",
    "solidity",
    "truffle"
  ],
  "author": "Mars Credit Network Team",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@metaplex-foundation/umi": "^1.2.0",
    "@metaplex-foundation/umi-bundle-defaults": "^1.2.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.98.2",
    "@tanstack/react-query": "^5.81.2",
    "@truffle/hdwallet-provider": "^2.1.15",
    "autoprefixer": "^10.4.20",
    "bs58": "^5.0.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.4",
    "next": "15.3.4",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "valtio": "^2.1.5",
    "viem": "^2.31.4",
    "wagmi": "^2.15.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^29.7.0",
    "solc": "^0.8.30",
    "typescript": "^5"
  },
  "overrides": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mars-credit-network/defi-marscredit.git"
  },
  "bugs": {
    "url": "https://github.com/mars-credit-network/defi-marscredit/issues"
  },
  "homepage": "https://defi.marscredit.xyz"
}
